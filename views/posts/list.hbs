{{#each messages}}
<div class="alert alert-dismissable alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<style>
    .refresh-button {
        padding: 10px;
        background: linear-gradient(#0cf, #09f);
        border-radius: 100px;
        font-size: 14px;
        font-weight: normal;
        color: white;
        float: right;
        text-decoration: none;
    }
    .top-text {
        display: inline-block;
    }
    
    a:hover{
        text-decoration: none;
    }
    
    .delete a{
        color: white;
        padding: 5px;
        background: linear-gradient(#f63, #f33);
        border: 1px solid black;
        border-radius: 2px;
    }
    
    
</style>

<div class="page-header">
    <h1 class="top-text">Bejegyzések</h1>
     <a href="/posts/list" class="refresh-button">Lista frissítése</a>
</div>

<table class="table table-striped table-hover" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Időpont</th>
            <th>Új/Régi</th>
            <th>Helyszín</th>
            <th>Bejegyzés</th>
            <th>Törlés</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{date}}</td>
                <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
                <td>{{location}}</td>
                <td><span class="badge">{{numberOfMessages}}</span><span>{{description}}</span></td>
                <td class="delete">
                    <a href="/delete/{{id}}"><string>×</string></a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/posts/new" class="btn btn-primary">Új bejegyzés c:</a></p>

